#eval "$(bw completion --shell zsh); compdef _bw bw;"
#eval "$(hugo completion zsh); compdef _hugo hugo;"

#fnm
eval "$(fnm env --use-on-cd)"

# https://starship.rs/config
eval "$(starship init zsh)"
