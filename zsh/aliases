# Common
alias ll='ls -hal'
alias la='ls -hal'
alias ..='cd ..'
alias ...='cd ../..'
alias p=pbpaste
alias c=pbcopy
alias vm='python3 $HOME/Dev/fabric/helpers/vm '
alias vmt='python3 $HOME/Dev/fabric/helpers/vm --transcript '

