# Common
alias ll='ls -hal'
alias la='ls -hal'
alias ..='cd ..'
alias ...='cd ../..'

# Kitty
alias theme='kitty +kitten themes'
alias hg="kitty +kitten hyperlinked_grep"

# Neovim
alias vim='nvim'

# Ripgrep
alias rf="rg --files-with-matches"

# Git
alias gitlog="git log --graph --pretty=format:'%Cred%h%Creset - %Cblue%an%Creset %C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"
alias gitclean="git branch --merged | egrep -v '(^\*|master|main|dev)' | xargs git branch -D"

# Docker
alias dsh="docker run --rm -it --entrypoint='/bin/sh' "
